@model AccountLoginResultModel
@{
    Layout = "";
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Oturum Aç &middot; Trioklinik Otomasyon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/login-style.css">
</head>

<body id="LoginBody">
    <!-- Login Form - Start -->
    <div class="container flex-column">
        <div class="row">
            <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">

                <form asp-controller="Account" asp-action="Login" method="post"
                    class="pt-4 pe-5 pb-5 ps-5 rounded-3 userAccountForm mt-5">
                    <h3 class="text-center">Giriş Yap</h3>
                    <hr>
                    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Kulanıcı Adını Giriniz" required>
                        <span class="invalid-feedback" asp-validation-for="Name">
                        </span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PasswordHash" class="form-label"></label>
                        <input asp-for="PasswordHash" class="form-control" placeholder="Sifrenizi Giriniz" required>
                        <span class="invalid-feedback" asp-validation-for="PasswordHash">
                        </span>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-success mb-2 ms-sm-0">Gönder</button>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <a href="" class="text-decoration-none text-dark"><small>Şifremi Unuttum</small></a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <!-- Login Form - End -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"
        integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD"
        crossorigin="anonymous"></script>
</body>

</html>