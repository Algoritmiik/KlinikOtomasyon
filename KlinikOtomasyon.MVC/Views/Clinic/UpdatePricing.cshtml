@model ClinicUpdatePricingResultModel
@{
    ViewData["Title"] = "Fiyatlandırma Güncelle";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h2 class="text-center">Ameliyat Güncelle</h2>
            <hr>
            <form asp-controller="Clinic" asp-action="UpdatePricing" method="post">
                <div class="form-body">

                    <div class="form-group">
                        <input asp-for="UpdatePricingDto.Id" type="text" name="Id" class="form-control" hidden>

                        <label asp-for="UpdatePricingDto.PriceOf">İsim</label>
                        <input asp-for="UpdatePricingDto.PriceOf" type="text" name="PriceOf" class="form-control"
                            placeholder="İsim">
                    </div>


                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="UpdatePricingDto.PriceAmount">Fiyat</label>
                                <input asp-for="UpdatePricingDto.PriceAmount" type="text" class="form-control"
                                    name="PriceAmount" placeholder="Fiyat">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="UpdatePricingDto.Currency">Ameliyat Fiyatı Para
                                    Birimi</label>
                                <select class="custom-select" asp-for="UpdatePricingDto.Currency"
                                    name="Currency">
                                        <option disabled>Bir Para Birimi Seçiniz</option>
                                        <option value="Euro" selected>Euro</option>
                                        <option value="Pound">İngiliz Sterlini</option>
                                        <option value="USD">Amerika Doları</option>
                                        <option value="AUD">Avustralya Doları</option>
                                        <option value="% (Yüzde)">% (Yüzde)</option> 
                                </select>
                            </div>
                        </div>

                    </div>

                    <div class="form-group">
                        <label asp-for="UpdatePricingDto.Note">Not</label>
                        <textarea asp-for="UpdatePricingDto.Note" name="Note" type="text" class="form-control"
                            placeholder="Otel Günü" style="height: 80px"></textarea>
                    </div>

                    <div class="form-actions center">
                        <a href="javascript:window.close()" class="btn btn-danger mr-1">
                            <i class="ft-x"></i> İptal
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="la la-check-square-o"></i> Kaydet
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>
